<%- include('partials/header') %>

<h1>Home</h1>
<p><%= homeContent %></p>

<% if (postsContent.length > 0) { %> <% postsContent.forEach(post =>{ %>
<div class="d-flex justify-content-between align-items-center">
  <h1><%= post.postTitle %></h1>
  <form action="/deletePost" method="post" id="deleteForm">
    <button class="btn btn-outline-primary btn-sm" name="deleteBtn" form="deleteForm" type="submit" value="<%= post._id  %>">Delete</button>
  </form>
</div>
<p>
  <%= post.postBody.substring(0,100) + "..." %>
  <a href="/posts/<%= post._id %>">ReadMore</a>
</p>
<% })%>
<% }%>
<%- include('partials/footer') %>

